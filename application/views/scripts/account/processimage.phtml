	// Append the scripts needed by jCrop 
	$this->headLink()->appendStylesheet($this->baseUrl . '/css/jcrop/jquery.jcrop.css');
	$this->headScript()->prependFile($this->baseUrl . '/js/jquery.jcrop.min.js');
