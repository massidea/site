<?php $this->headScript()->captureStart() ?>
$(function(){
	$('#cropbox').Jcrop({
		aspectRatio: 1,
		setSelect: [0,0,100,100],
		onSelect: updateCoords,
		boxWidth: 600,
		boxHeight: 600
	});
});

function updateCoords(c)
{
    // Coordinates are stored as variables and can be accessed here as
    // c.x, c.y, c.x2, c.y2, c.w, c.h
    
    $('#c_x').val(c.x);
    $('#c_y').val(c.y);
    $('#c_w').val(c.w);
    $('#c_h').val(c.h);
};
